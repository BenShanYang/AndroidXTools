<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ClearEditTextActivity">

    <com.benshanyang.toolslibrary.widget.TitleBarView
        android:id="@+id/title_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:borderColor="#D5D5D5"
        app:borderWidth="2px"
        app:immersionStatusBar="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleBarHeight="?android:attr/actionBarSize"
        app:titleText="ClearEditText"
        app:titleTextSize="18sp" />

    <com.benshanyang.toolslibrary.widget.ClearEditText
        android:id="@+id/cet"
        android:layout_width="@dimen/dimen_300"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:digits="^[a-z0-9]+$"
        android:hint="@string/input_phone"
        android:icon="@drawable/ic_phone"
        android:inputType="textMultiLine"
        android:minHeight="@dimen/dimen_45"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:textSize="14sp"
        app:borderLeftSpace="@dimen/dimen_10"
        app:borderRightSpace="@dimen/dimen_10"
        app:borderWidth="2px"
        app:clearIconPaddingLeft="10dp"
        app:clearIconPaddingRight="10dp"
        app:iconColor="#999999"
        app:iconPaddingLeft="8dp"
        app:iconTextPaddingLeft="8dp"
        app:isShowBorder="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar_view"
        app:layout_constraintVertical_bias="0.2"
        app:textPaddingBottom="@dimen/dimen_3"
        app:textPaddingTop="@dimen/dimen_3" />

</androidx.constraintlayout.widget.ConstraintLayout>