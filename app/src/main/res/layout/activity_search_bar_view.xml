<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SearchBarViewActivity">

    <com.benshanyang.toolslibrary.widget.TitleBarView
        android:id="@+id/title_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:borderColor="#D5D5D5"
        app:borderWidth="2px"
        app:immersionStatusBar="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleBarHeight="?android:attr/actionBarSize"
        app:titleText="EditableTextView"
        app:titleTextSize="18sp" />

    <LinearLayout
        android:layout_width="@dimen/dimen_300"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar_view"
        app:layout_constraintVertical_bias="0.2">

        <com.benshanyang.toolslibrary.widget.SearchBarView
            android:id="@+id/search_bar_view_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="12dp"
            app:backgroundColor="#F1F1F1"
            app:borderColor="#D5D5D5"
            app:borderWidth="1dp"
            app:cornerRadius="15dp"
            app:editIcon="@drawable/ic_search"
            app:editIconPadding="8dp"
            app:focusedBackgroundColor="#FFFF00"
            app:focusedBorderColor="#FF0000"
            app:hint="请输入要搜索的内容..."
            app:isShowActionButton="true"
            app:isShowBorder="true"
            app:normalBackgroundColor="#F1F1F1"
            app:normalBorderColor="#FFCCCC"
            app:text="android"
            app:textColor="#333333"
            app:textColorHint="#999999"
            app:textSize="14sp" />

        <com.benshanyang.toolslibrary.widget.SearchBarView
            android:id="@+id/search_bar_view_2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="12dp"
            app:backgroundColor="#F1F1F1"
            app:borderColor="#D5D5D5"
            app:borderWidth="1dp"
            app:cornerRadius="15dp"
            app:editIcon="@drawable/ic_search"
            app:editIconPadding="8dp"
            app:focusedBackgroundColor="#FFFF00"
            app:focusedBorderColor="#FF0000"
            app:hint="请输入要搜索的内容..."
            app:actionIcon="@drawable/ic_camera"
            app:isShowActionButton="true"
            app:isShowBorder="true"
            app:normalBackgroundColor="#F1F1F1"
            app:normalBorderColor="#FFCCCC"
            app:text="android"
            app:textColor="#333333"
            app:textColorHint="#999999"
            app:textSize="14sp" />

        <com.benshanyang.toolslibrary.widget.SearchBarView
            android:id="@+id/search_bar_view_3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="12dp"
            app:backgroundColor="#F1F1F1"
            app:borderColor="#D5D5D5"
            app:borderWidth="1dp"
            app:cornerRadius="15dp"
            app:editIcon="@drawable/ic_search"
            app:editIconPadding="8dp"
            app:focusedBackgroundColor="#FFFF00"
            app:focusedBorderColor="#FF0000"
            app:hint="请输入要搜索的内容..."
            app:isShowActionButton="true"
            app:isShowBorder="true"
            app:normalBackgroundColor="#F1F1F1"
            app:normalBorderColor="#FFCCCC"
            app:text="android"
            app:textColor="#333333"
            app:textColorHint="#999999"
            app:textSize="14sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>