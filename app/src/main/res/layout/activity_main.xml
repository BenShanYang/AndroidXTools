<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bgcolor">

    <com.benshanyang.toolslibrary.widget.TitleBarView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:backImageSrc="@drawable/ic_finish_activity"
        app:borderColor="#D5D5D5"
        app:borderWidth="2px"
        app:buttonDrawablePadding="0dp"
        app:buttonDrawableTop="@drawable/ic_menu"
        app:buttonText="菜单"
        app:buttonTextColor="@color/titlebar_actionbtn_textcolor"
        app:buttonTextSize="10sp"
        app:buttonType="text_button"
        app:immersionStatusBar="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleBarBackgroundColor="@android:color/transparent"
        app:titleBarHeight="?android:attr/actionBarSize"
        app:titleText="标题"
        app:titleTextColor="@color/titlebar_title_textcolor"
        app:titleTextSize="18sp" />

</androidx.constraintlayout.widget.ConstraintLayout>